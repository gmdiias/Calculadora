<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.dominando.calculadora.MainActivity">

    <EditText
        android:id="@+id/etValor1"
        android:layout_width="355dp"
        android:layout_height="43dp"
        android:layout_alignEnd="@+id/etValor2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/etValor2"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/et_valor"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/etValor2"
        android:layout_width="353dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="@string/et_valor"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/et_valor1"
        tools:layout_editor_absoluteX="16dp"
        android:layout_below="@+id/etValor1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/bt_calc"
        app:layout_constraintTop_toBottomOf="@+id/etValor2"
        tools:layout_editor_absoluteX="147dp"
        android:layout_below="@+id/etValor2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
